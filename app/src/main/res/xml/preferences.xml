<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Settings"></PreferenceCategory>
    <ListPreference
        android:title="Dictionary"
        android:key="dictionary"
        android:entries="@array/dictionaries"
        android:entryValues="@array/dictionaries"
        android:defaultValue="@string/sowpods"/>

    <ListPreference
        android:title="Minimum word length"
        android:key="word_length"
        android:entries="@array/word_length_entries"
        android:entryValues="@array/word_length_values"
        android:defaultValue="3" />

</PreferenceScreen>