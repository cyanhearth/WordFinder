<resources>

    <!-- Inherit from appcompat theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- main theme colours -->
        <!-- app bar colour -->
        <item name="colorPrimary">@color/primary</item>
        <!-- darker variant forstatus bar/ contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- accent color -->
        <item name="colorAccent">@color/accent</item>
        <!-- set ListPopupWindow background colour -->
        <item name="actionOverflowMenuStyle">@style/AppTheme.Overflow</item>

        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="android:alertDialogTheme">@style/CustomDialog</item>

    </style>

    <style name="AppTheme.Overflow" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/primary</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">false</item>
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used for the background -->
        <item name="android:background">@color/primary</item>
    </style>


</resources>
